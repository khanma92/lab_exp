<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <title>Anthrope</title>
  <meta name="description"
    content="Learn about your preferences, cognition, and behavior through beautiful visualizations while improving science. Complete behavioral science surveys and questionnaires to understand yourself better and learn more about others.">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta property="og:type" content="website">
  <meta property="og:image"
    content="https://raw.githubusercontent.com/hauselin/lab_exp/master/public/assets/img/favicon.svg">
  <link href="../public/assets/css/loaders/loader-typing.css" rel="stylesheet" type="text/css" media="all" />
  <link href="../public/assets/css/theme.css" rel="stylesheet" type="text/css" media="all" />
  <link href="../public/assets/css/custom.css" rel="stylesheet" type="text/css" media="all" />
  <!-- Add icon library -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <!-- <link rel="preload" as="font" href="../public/assets/fonts/Inter-UI-upright.var.woff2" type="font/woff2" , crossorigin="anonymous"> -->
  <!-- <link rel="preload" as="font" href="../public/assets/fonts/Inter-UI.var.woff2" type="font/woff2" , crossorigin="anonymous"> -->
</head>

<body style="overflow-x: hidden; " data-smooth-scroll-offset="73">
  <div class="loader">
    <div class="loading-animation"></div>
  </div>

  <%- include('partials/menu_bar_index') %>

  <section data-overlay class="bg-primary text-light o-hidden position-relative pb-0">
    <div class="min-vh-60 o-hidden d-flex flex-column justify-content-center index-background">
      <div class="container">
        <div class="row justify-content-center text-center align-items-center">
          <div class="col-xl-8 col-lg-9 col-md-10 layer-3" data-aos="fade-up" data-aos-delay="500">
            <h1 class="main-title">
              Anthrope
            </h1>
            <div class="mb-4">
              <p class="lead px-xl-5">
                Understand yourself better and learn more about others.<br>
                Not sure where to begin? Click the button below.
              </p>
            </div>
            <a class="btn btn-lg btn-primary-3 mx-1" href=<%=task_to_try.route%>>
              Try this task we've selected for you. <br>
              Estimated time: <%=task_to_try.time%>
            </a>
            <div class="pt-2">
              <p class="px-xl-5">
                For a better experience, use Chrome or Firefox on your desktop.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="bg-primary-alt pb-2" id="surveys">
    <div class="container">
      <div class="row justify-content-center text-center">
        <div class="col-xl-8 col-lg-9">
          <h1>Surveys</h1>
          <a href="/surveys">
            <p>See more ></p>
          </a>
        </div>
      </div>
    </div>
    <div class="arrows-inside highlight-selected mb-6"
      data-flickity='{ "autoPlay": true, "imagesLoaded": true, "wrapAround": true }'>

      <% for(var i = 0; i < surveys.length; i++) { %>
      <% var image_link =  "../public/assets/img/surveys/" + surveys[i].uniquestudyid + ".jpg" %>
      <% var study_link =  "/surveys/" + surveys[i].uniquestudyid + "/" %>
      <div class="carousel-cell col-lg-3 col-md-5 col-9 px-0">
        <p style="text-align: center; font-size: large; font-weight: bold;">
          <%= surveys[i].name %>
        </p>
        <a href=<%=study_link%>>
          <img style="width:100%; height: 100%; object-fit: cover;" src=<%=image_link%> alt=""
            class="rounded shadow-3d hover-shadow-3d border">
        </a>
        <p style="text-align: center; font-size: large; font-weight: bold;" class="pt-1">
          <%= surveys[i].description %>
        </p>
      </div>
      <% } %>

    </div>
  </section>

  <section class="text-center pb-2" id="tasks">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-xl-9">
          <h1>Tasks</h1>
          <a href="/tasks">
            <p>See more ></p>
          </a>
        </div>
      </div>
    </div>
  </section>
  <section class="pt-0">
    <div class="container">
      <div class="row">

        <% for(var i = 0; i < tasks.length; i++) { %>
        <% var image_link =  "../public/assets/img/tasks/" + tasks[i].uniquestudyid + ".jpg" %>
        <% var study_link =  "/tasks/" + tasks[i].uniquestudyid + "/" %>
        <% var viz_link =  "/tasks/" + tasks[i].uniquestudyid + "/viz" %>
        <div class="col-md-6 col-lg-4">
          <div class="card" data-aos="fade-up" data-aos-delay="<%=(i%3+1)*200%>">
            <a href=<%=study_link%>>
              <img style="width:100%; height: 250px; object-fit:cover;" src=<%=image_link%> alt="Image"
                class="card-img-top">
            </a>
            <div class="card-body align-items-start" style="height: 175px;">
              <div class="card-title py-0 my-0"><b><%=tasks[i].name%></b></div>
              <div class="card-text pt-1 my-1"><%=tasks[i].description%></div>
            </div>
            <div class="card-footer" style="padding: 10px; padding-left: 20px;"><a style="color: #3366BB;"
                href=<%=study_link%>>Begin (<%=tasks[i].time%>)</a> or 
                <a style="color: #3366BB;" href=<%=viz_link%>>learn more</a>
              </div>
          </div>
        </div>
        <% } %>

      </div>
    </div>
  </section>


  <section class="bg-primary pb-2" id="studies">
    <div class="container">
      <div class="row justify-content-center text-center text-light mb-4">
        <div class="col">
          <h1>Studies</h1>
          <a href="/studies">
            <p>See more ></p>
          </a>
        </div>
      </div>
      <div class="row">

        <% for(var i = 0; i < studies.length; i++) { %>
        <% var study_link =  "/studies/" + studies[i].uniquestudyid + "/" %>
        <div class="col-sm-6 col-lg-4" data-aos="fade-up" data-aos-delay="100">
          <a class="card card-sm card-body flex-row align-items-center fade-page hover-shadow-3d" href=<%=study_link%>>
            <img class="icon icon-lg
          bg-primary-2" src="../public/assets/img/icons/theme/home/bulb-1.svg" alt="icon" />
            <div class="ml-3">
              <h5 class="mb-0"><%=studies[i].name%></h5>
              <span><%=studies[i].description%></span>
            </div>
          </a>
        </div>
        <% } %>

      </div>
    </div>
  </section>

  <section>
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-xl-8 col-lg-9">
          <h1 id="faq">FAQ</h1>
          <div class="my-4">

            <% for(var i = 0; i < faq.length; i++) { %>
            <div class="card mb-2 card-sm card-body hover-shadow-sm" data-aos="fade-up" data-aos-delay="NaN">
              <div class="accordion-panel-title" data-toggle="collapse" role="button" aria-expanded="false"
                aria-controls="panel-1" data-target=<%= "#panel-" + i.toString() %>>
                <span class="h6 mb-0"><%=faq[i].q%></span>
                <img class="icon" src="../public/assets/img/icons/interface/plus.svg" alt="plus interface icon" />
              </div>
              <div class="collapse" id=<%= "panel-" + i.toString() %>>
                <div class="pt-3">
                  <p><%-faq[i].resp%></p>
                </div>
              </div>
            </div>
            <% } %>

          </div>
        </div>
      </div>
    </div>
  </section>

  <%- include('partials/footer') %>